{% extends 'base.html.twig' %}

{% block title %}Episode{% endblock %}

{% block body %}
<div class="episode">
    <h2>Episode {{ episode.number }}</h2>

    <table class="table">
        <tbody>
            <tr>
                <th>Titre</th>
                <td>{{ episode.title }}</td>
            </tr>
            <tr>
                <th>Résumé</th>
                <td>{{ episode.synopsis }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('episode_index') }}" style="color:white;">revenir à la liste</a>

    <a href="{{ path('episode_edit', {'id': episode.id}) }}"><input type ="submit" value="Modifier l'épisode"></a>

    {{ include('episode/_delete_form.html.twig') }}
</div>
{% endblock %}
